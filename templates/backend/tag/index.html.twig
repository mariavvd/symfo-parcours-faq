{% extends 'base.html.twig' %}

{% block title %}Hello TagController!{% endblock %}

{% block body %}
<table>
       {% for tag in tags %}
           <tr>
               <td> {{tag.name}}</td>
               <td> <a class="btn btn-outline-danger" href="{{path('backend_tag_delete', {'id' : tag.id})}}">delete Tag</a></td>
               <td> <a class="btn btn-outline-secondary" href="{{path('backend_tag_edit', {'id': tag.id})}}">edit Tag</a></td>
            </tr>
   {% endfor %}
</table>
<a class="btn btn-outline-primary" href="{{path('backend_tag_new')}}"> Add a new Tag</a>
{% endblock %}
